<TAN-R-tok xmlns="tag:textalign.net,2015:ns" TAN-version="1/dev" id="tag:textalign.net,2015:tan-r-tok:general-1">
   <head>
      <name>General tokenization pattern for any language</name>
      <desc>This tokenization pattern takes any text in any language, offsets punctuation and other
         non-word characters with spaces, then returns a sequence of strings tokenized by white
         space. It is meant to be applied to transcriptions prepared by agents who have given little
         or no thought to tokenization, and to be suitable for languages and texts where individual
         punctuation marks are deemed important objects of linguistic analysis. This is a core
         tokenization pattern, so can be invoked by the elements tokenization or
         recommended-tokenization simply by setting @which to the value "general-1". Or you may use
         the full IRI + name pattern.
         <!-- Full IRI + name pattern provided below for the convenience of those preparing a transcription file. 
            @when-accessed should be updated. -->
         <!--
            <recommended-tokenization xml:id="general-1">
               <IRI>tag:textalign.net,2015:tarn-r-tok:general-1</IRI>
               <name>General tokenization pattern for any language</name>
               <location when-accessed="2015-01-01">http://textalign.net/release/1/dev/TAN-R-tok/general-1.xml</location>
            </recommended-tokenization>
         -->
      </desc>
      <master-location href="http://textalign.net/release/1/dev/TAN-R-tok/general-1.xml"/>
      <rights-excluding-sources rights-holder="kalvesmaki">
         <IRI>http://creativecommons.org/licenses/by/4.0/deed.en_US</IRI>
         <name>Creative Commons Attribution 4.0 International License</name>
         <desc>This license is granted independent of rights and licenses associated with the
            source. </desc>
      </rights-excluding-sources>
      <declarations/>
      <agent xml:id="kalvesmaki" roles="creator">
         <IRI>http://viaf.org/viaf/299582703</IRI>
         <IRI>tag:textalign.net,2015:agent:kalvesmaki:joel</IRI>
         <name xml:lang="eng">Joel Kalvesmaki</name>
      </agent>
      <role xml:id="creator">
         <IRI>http://schema.org/creator</IRI>
         <name xml:lang="eng">creator</name>
      </role>
      <change when="2015-03-16" who="kalvesmaki">Started file</change>
   </head>
   <body in-progress="false">
      <replace>
         <comment when="2015-03-16" who="kalvesmaki">Pad every cluster of non-word characters with
            space.</comment>
         <pattern>(\W)</pattern>
         <replacement> $1 </replacement>
      </replace>
      <replace>
         <comment when="2015-03-16" who="kalvesmaki">Delete end spaces.</comment>
         <pattern>^\s+|\s+$</pattern>
         <replacement/>
      </replace>
      <tokenize>
         <pattern>\s+</pattern>
      </tokenize>
      <example>
         <input>I said, "Where is the ping-pong table?"</input>
         <output-token>I</output-token>
         <output-token>said</output-token>
         <output-token>,</output-token>
         <output-token>"</output-token>
         <output-token>Where</output-token>
         <output-token>is</output-token>
         <output-token>the</output-token>
         <output-token>ping</output-token>
         <output-token>-</output-token>
         <output-token>pong</output-token>
         <output-token>table</output-token>
         <output-token>?</output-token>
         <output-token>"</output-token>
      </example>
   </body>
</TAN-R-tok>